{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "pythonTestExplorer.testFramework": "pytest",

    "runItOn": {
        "commands": [
            {
                "match": "\\.py$",
                "isAsync": false,
                "isShellCommand": false,               
                "cmd": "testing.runAll"
            },
        ],
    }
}